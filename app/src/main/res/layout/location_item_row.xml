<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="13.5dp"
            android:layout_marginEnd="14dp">
            <LinearLayout
                android:layout_margin="14dp"
                android:id="@+id/daily_project_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--    android:background="@color/red"-->
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/username"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:text="User name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/eventD"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Last Date">
                    </TextView>
                    <TextView
                        android:id="@+id/eventT"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Last Time">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/last_date"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                        <!--                                app:getProjectName="@{data.projectId}"-->
                    </TextView>
                    <TextView
                        android:id="@+id/last_time"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="start">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/createdB"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/distance"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/city"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="Event Info">
                    </TextView>
                    <TextView
                        android:id="@+id/Dist"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/state"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</FrameLayout>

